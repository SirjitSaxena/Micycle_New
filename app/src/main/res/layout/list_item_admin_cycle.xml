<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white"
    android:elevation="1dp">

    <!-- Cycle Image -->
    <ImageView
        android:id="@+id/adminCycleImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@mipmap/ic_launcher"/> <!-- Placeholder image -->

    <!-- Cycle Model -->
    <TextView
        android:id="@+id/adminCycleModelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@+id/adminCycleImageView"
        app:layout_constraintStart_toEndOf="@+id/adminCycleImageView"
        app:layout_constraintEnd_toStartOf="@+id/adminBlockCycleButton"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="4dp"
        tools:text="Trek FX 2"/> <!-- Placeholder text -->

    <!-- Cycle Price -->
    <TextView
        android:id="@+id/adminCyclePriceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/adminCycleModelTextView"
        app:layout_constraintStart_toEndOf="@+id/adminCycleImageView"
        app:layout_constraintEnd_toStartOf="@+id/adminBlockCycleButton"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="Price: â‚¹10/hour"/> <!-- Placeholder text -->

    <!-- Cycle Status -->
    <TextView
        android:id="@+id/adminCycleStatusTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/adminCyclePriceTextView"
        app:layout_constraintStart_toEndOf="@+id/adminCycleImageView"
        app:layout_constraintEnd_toStartOf="@+id/adminBlockCycleButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/adminCycleImageView"
        tools:text="Status: Available"/> <!-- Placeholder text -->

    <!-- Block/Unblock Cycle Button (ImageButton) -->
    <ImageButton
        android:id="@+id/adminBlockCycleButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_block"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/block_cycle"/>
</androidx.constraintlayout.widget.ConstraintLayout>