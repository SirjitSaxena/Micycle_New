<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white"
    android:elevation="1dp"
    android:id="@+id/transactionItemContainer">

    <!-- Cycle Name -->
    <TextView
        android:id="@+id/transactionCycleNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/transactionStatusTextView"
        android:layout_marginEnd="8dp"
        tools:text="Cycle Model Name"/>

    <!-- Other User Name (Renter or Owner) -->
    <TextView
        android:id="@+id/transactionOtherUserNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/transactionCycleNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Rented from: John Doe / Rented by: Jane Smith"/>

    <!-- User Email -->
    <TextView
        android:id="@+id/transactionUserEmailTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/transactionCycleNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="user@example.com"
        android:visibility="gone"/> <!-- Assuming email is not always needed in the list -->


    <!-- Start Time -->
    <TextView
        android:id="@+id/transactionStartTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/transactionOtherUserNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Start: 2023-10-27 10:00 AM"/>

    <!-- End Time -->
    <TextView
        android:id="@+id/transactionEndTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/transactionStartTimeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="End: 2023-10-27 02:00 PM"/>

    <!-- Total Cost -->
    <TextView
        android:id="@+id/transactionTotalCostTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/transactionEndTimeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Cost: â‚¹40.00"/>

    <!-- Booking Status -->
    <TextView
        android:id="@+id/transactionStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Completed"/>

    <!-- Leave Review Button -->
    <Button
        android:id="@+id/leaveReviewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave Review"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/transactionStatusTextView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Delete Review Button -->
    <Button
        android:id="@+id/deleteReviewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Review"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/transactionStatusTextView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Edit Review Button -->
    <Button
        android:id="@+id/editReviewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Review"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/deleteReviewButton"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>